{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{{ title }}</h1>

        {% if garden is not null %}
            <div>
                <p><b>name : </b> {{ garden.name }} </p>
                <p><b>location : </b> {{ garden.location }} </p>
                <p><b>status : </b> {{ garden.status }} </p>
                <p><b>visitDate : </b> {{ garden.visitdate|date('Y-m-d') }} </p>
                <hr>
            </div>
        {% else %}
            <p>No garden found.</p>
        {% endif %}

        <a href="{{ path('app_garden_mariem_ferchichi_list') }}">back to list</a>
    </div>
{% endblock %}