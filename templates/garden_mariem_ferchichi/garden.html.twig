{% extends 'base.html.twig' %}


{% block title %} gardens!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>gardens list ! âœ…</h1>
    <a href="{{path('app_garden_mariem_ferchichi_create')}}">add garden</a>

    {% for garden in gardens %}
        <div>
        <p><b>name : </b> {{ garden.name }} </p>
        <p><b>location : </b> {{ garden.location }} </p>
<p><b>Status :</b> {{ garden.status ? 'Open' : 'Close' }}</p>
        <p><b>visitDate : </b> {{ garden.visitdate|date('Y-m-d') }} </p>
        
        <a href="{{path('app_garden_mariem_ferchichi_details',{id: garden.id})}}">Details</a>
        <a href="{{path('app_garden_mariem_ferchichi_update',{id: garden.id})}}">update</a>
        <a href="{{path('app_garden_mariem_ferchichi_delete',{id: garden.id})}}">delete</a>

 

        <hr>
        </div>
    {% endfor %}

    
</div>
{% endblock %}